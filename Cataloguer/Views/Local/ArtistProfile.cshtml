@model Artist
@{
    ViewBag.Title = Model.Name;
}

<div class="row">
    <div class="col-sm-3 col-md-3 col-lg-3">
        <img width="100%" class="img-thumbnail" src="@Model.PictureLink" />
    </div>
    <div class="col-sm-9 col-md-9 col-lg-9">
        <h1 class="text-center">@Model.Name</h1>
    </div>
</div>
@if (Model.Tracks.Count == 0)
{
    <h4 class="text-center">There are no tracks of this artist</h4>
}
else
{
    @Html.Partial("PartialTableWithTracks", Model.Tracks)
}
@if (Model.Albums.Count == 0)
{
    <h4 class="text-center">There are no albums of this artist</h4>
}
else
{
    <h2 class="text-center">Albums</h2>
    <div class="flex-container">
        @foreach (Album album in Model.Albums)
        {
            <div class="panel panel-info">
                <div class="panel-heading">
                    <p class="text-center">
                        @Html.ActionLink(album.Name, "Album", "Local",
                        new { albumName = album.Name, artistName = Model.Name }, new { })
                    </p>
                </div>
                <div class="panel-body">
                    <img class="center-block" src="@album.PictureLink" />
                </div>
                <div class="panel-footer">
                    <p class="text-center">
                        @Html.ActionLink(album.Name + " on Last.fm", "Album", "Home",
                       new { albumName = album.Name, artistName = Model.Name }, new { })
                    </p>
                </div>
            </div>
        }
    </div>
}
