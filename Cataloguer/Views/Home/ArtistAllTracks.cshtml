@using Cataloguer.Models
@model Artist
@{
    ViewBag.Title = Model.Name;
}

<h1 class="text-center"><img src="@Model.PictureLink" />    @Model.Name</h1>
<h2 class="text-center">Top tracks of all time</h2>
<table class="table table-hover table-striped table-bordered">
    <tbody>
        @foreach (Track track in Model.Tracks ?? new List<Track>())
        {
            <tr>
                <td>@track.Rank</td>
                <td>@track.Name</td>
                <td>@track.Listeners</td>
            </tr>
        }
    </tbody>
</table>
