@using Cataloguer.Models
@model Album
@{
    ViewBag.Title = Model.Name;
}

<h1 class="text-center"><img src="@Model.PictureLink" />    @Model.Name</h1>

<h4>Artist : @Html.ActionLink(Model.Artist.Name, "ArtistProfile", "Home",
    new { artistName = Model.Artist.Name, artistPictureLink = "", artistProfileLink = Model.Artist.ProfileLink }, new { })</h4>
<h4>Scrobbles : @Model.Scrobbles</h4>
<h4>Listeners : @Model.Listeners</h4>
<h4>
    Tags :
    @foreach (string tag in Model.Tags)
    {
        <code>@tag</code>
    }
</h4>
<h2 class="text-center">Top tracks</h2>
<table class="table table-hover table-striped table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Duration</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Track track in Model.Tracks ?? new List<Track>())
        {
            <tr>
                <td>@track.Rank</td>
                <td>@track.Name</td>
                <td>@track.Duration</td>
            </tr>
        }
    </tbody>
</table>
