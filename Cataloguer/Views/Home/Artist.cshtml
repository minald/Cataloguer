@model Artist
@{
    ViewBag.Title = Model.Name;
}

<div class="row">
    <div class="col-sm-4 col-md-4 col-lg-4">
        <img width="100%" class="img-thumbnail" src="@Model.PictureLink" />
    </div>
    <div class="col-sm-8 col-md-8 col-lg-8">
        <h1 class="text-center">@Model.Name</h1>
        <partial name="_TagList" model="Model.Tags" />
        <h4>Scrobbles : @Model.Scrobbles</h4>
        <h4>Listeners : @Model.Listeners</h4>
        @if (!String.IsNullOrWhiteSpace(Model.ShortBiography))
        {
            <p>@Model.ShortBiography</p>
            <a asp-controller="Home" asp-action="ArtistBiography" asp-route-name="@Model.Name">See more...</a>
        }
    </div>
</div>
<h2 class="text-center">Top tracks</h2>
<div class="flex-container">
    <partial name="_Tracks" model="Model.Tracks" />
</div>
@if (Model.Tracks.Count > 9)
{
    <a asp-controller="Home" asp-action="ArtistAllTracks" asp-route-name="@Model.Name">More tracks...</a>
}
<h2 class="text-center">Top albums</h2>
<div class="flex-container">
    <partial name="_Albums" model="Model.Albums" />
</div>
@if (Model.Albums.Count > 7)
{
    <a asp-controller="Home" asp-action="ArtistAllAlbums" asp-route-name="@Model.Name">More albums...</a>
}
